<Meta::Tags>
	<title>SurrealDB | Open Source | The ultimate multi-model database</title>
	<meta name="title" property="og:title" content="SurrealDB | Open Source">
	<meta name="description" content="SurrealDB is an open source company, supporting existing open source tools and communities wherever possible.">
</Meta::Tags>

<Layout::Hero install>
	<Layout::Text text-l>
		<h1>Our open source projects</h1>
		<h3 lighter>SurrealDB is an open source company, supporting existing open source tools and communities wherever possible. Source code and core components for SurrealDB are variously licensed under a number of different licenses. A copy of each license can be found in each repository on GitHub.</h3>
		<Button @link={{url "gitorg"}}>
			<i class="fab fa-github"></i> <span>View us on GitHub</span>
		</Button>
		<Button @link={{url "github"}}>
			<i class="fa fa-star"></i> <span>Star us on GitHub</span>
		</Button>
	</Layout::Text>
</Layout::Hero>

<section>

	<Layout::Boxes cols-3-to-2-to-1>
		{{#each this.model as |project|}}
			<Link @link={{project.attributes.link}} mini>
				<Layout::Boxes::Item opensource @image={{project.attributes.image}} @stamp={{project.attributes.lang}} @title={{project.attributes.name}} @text={{project.attributes.text}} hover />
			</Link>
		{{/each}}
	</Layout::Boxes>

	<Layout::Gap large />

</section>