{{#if (or (begs-with @link "https://") (begs-with @link "http://") (begs-with @link "/"))}}
	<a href={{@link}} rel="noopener noreferrer" target="_blank" ...attributes>
		{{#if (has-block)}}
			{{yield}}
		{{else}}
			<span>{{@text}}</span>
		{{/if}}
		{{#if @info}}
			<info>{{@info}}</info>
		{{/if}}
	</a>
{{else}}
	<LinkTo @route={{@link}} selected={{begs-with (route-name) @link}} ...attributes>
		{{#if (has-block)}}
			{{yield}}
		{{else}}
			<span>{{@text}}</span>
		{{/if}}
		{{#if @info}}
			<info>{{@info}}</info>
		{{/if}}
	</LinkTo>
{{/if}}