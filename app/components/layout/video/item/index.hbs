<a {{on "click" (fn (mut this.show) true)}} mini ...attributes>

	<layout-video-item ...attributes>

		<pic><img loading="lazy" src={{@image}} alt={{@title}}>{{#if @video}}<cover></cover>{{/if}}</pic>

	</layout-video-item>

</a>

{{#if this.show}}

	{{#if @video}}

		<Ascua::Modal video @onClose={{fn (mut this.show) false}}>

			<Modal::Close @close={{fn (mut this.show) false}} />

			{{#if (inside @video "vimeo")}}
				<iframe src="{{@video}}?title=0&byline=0&portrait=0&speed=0&badge=0&autopause=0&autoplay=1" width="100%" height="100%" title={{@title}} frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
			{{/if}}
			{{#if (inside @video "youtube")}}
				<iframe src={{@video}} width="100%" height="100%" title={{@title}} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen />
			{{/if}}

		</Ascua::Modal>

	{{/if}}

{{/if}}