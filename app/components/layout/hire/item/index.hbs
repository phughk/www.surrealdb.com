<layout-hire-item ...attributes>

	{{#if (or @stamp @title @label @text (has-block))}}
		<div>

			<div class="text-container">
				{{#if @stamp}}
					<p>{{@stamp}}</p>
				{{/if}}

				{{#if @title}}
					<h3>
						{{@title}}
					</h3>
				{{/if}}

				{{#if @label}}
					<h4>
						{{@label}}
					</h4>
				{{/if}}

				{{#if @text}}
					<p>{{@text}}</p>
				{{/if}}
			</div>

			{{#if @buttontext}}
				<Button careers @link={{@url}}>
					<span>{{@buttontext}}</span> <i class="fas fa-arrow-right"></i>
				</Button>
			{{/if}}

			{{yield}}

		</div>
	{{/if}}

</layout-hire-item>